<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_gravity="center"
    android:padding="10dp"
    tools:ignore="HardcodedText"
    android:background="@drawable/style_navigation">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:foregroundGravity="center"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="5dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">


        <TextView
            android:id="@+id/numberOfMistakes"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:text="NUM Gabime"
            android:textStyle="bold"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textSize="30sp" />

        <TextView
            android:id="@+id/examChronometer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="15dp"
            android:text="time"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textSize="20sp" />

        <Button
            android:id="@+id/reviewExam"
            android:background="@drawable/style_navigation"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:layout_marginTop="20dp"
            android:text="RISHIKO GABIMET"
            android:textColor="@color/black"
            android:drawableStart="@drawable/ic_review"
            android:paddingStart="80dp"
            android:paddingEnd="80dp"/>

        <Button
            android:id="@+id/startNewExam"
            android:background="@drawable/style_navigation"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:layout_marginTop="10dp"
            android:text="PROVIM TJETER"
            android:textColor="@color/black"
            android:drawableStart="@drawable/ic_redo"
            android:paddingStart="80dp"
            android:paddingEnd="80dp"/>

        <Button
            android:id="@+id/closeResults"
            android:background="@drawable/style_navigation"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:layout_marginTop="10dp"
            android:text="MBYLL PROVIMIN"
            android:textColor="@color/black"
            android:drawableStart="@drawable/ic_close"
            android:paddingStart="80dp"
            android:paddingEnd="80dp"/>

    </LinearLayout>


</LinearLayout>